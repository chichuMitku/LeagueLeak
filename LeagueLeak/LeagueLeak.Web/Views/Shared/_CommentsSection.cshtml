<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body">
            @foreach (var comment in @Model.Comments)
            {
                <p>@comment.Content</p>
                <em>on @comment.DateCreated, by @comment.AuthorName</em>
                <hr/>
            }
        </div>
    </div>
</div>