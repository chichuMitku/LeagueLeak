@using LeagueLeak.Web.Models
@model LeagueLeak.Web.Models.Champions.ChampionViewModel

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <h1>@Model.ChampionName</h1>
    <div class="row">
        <em>Role: @Model.Role</em>
    </div>
    <div class="row">
        <p>Magic: @Model.Magic</p>
    </div>
    <div class="row">
        <p>Attack: @Model.Attack</p>
    </div>
    <div class="row">
        <p>Defense: @Model.Defense</p>
    </div>
    <div class="row">
        <p>Difficulty: @Model.Difficulty</p>
    </div>
    <div class="row">
        <p><img src="@Url.Content(Model.ImagePath)" alt="image" /></p>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            @Html.Partial("_PostComment", new CommentsViewModel()
       {
           ChampionId = @Model.Id
       })
        </div>
        <br />
        <div id="comments">
            @foreach (var comment in @Model.Comments)
            {
                @Html.Partial("_CommentsSection", comment)
            }
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("/Scripts/jquery.unobtrusive-ajax.js")
}
